<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDividerLight"
    tools:context="com.swifta.mats.HomeActivity">

    <LinearLayout
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_padding"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_padding"
        android:paddingRight="@dimen/activity_horizontal_padding">

        <Button
            android:id="@+id/float_transfer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/btn_separator"
            android:layout_marginEnd="@dimen/btn_separator"
            android:layout_marginLeft="@dimen/btn_separator"
            android:layout_marginRight="@dimen/btn_separator"
            android:layout_marginStart="@dimen/btn_separator"
            android:background="@drawable/accent_button_selector"
            android:text="@string/float_transfer"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/cash_in"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/btn_separator"
            android:layout_marginEnd="@dimen/btn_separator"
            android:layout_marginLeft="@dimen/btn_separator"
            android:layout_marginRight="@dimen/btn_separator"
            android:layout_marginStart="@dimen/btn_separator"
            android:background="@drawable/accent_button_selector"
            android:text="@string/cash_in"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/withdrawal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/btn_separator"
            android:layout_marginEnd="@dimen/btn_separator"
            android:layout_marginLeft="@dimen/btn_separator"
            android:layout_marginRight="@dimen/btn_separator"
            android:layout_marginStart="@dimen/btn_separator"
            android:background="@drawable/accent_button_selector"
            android:text="@string/cash_out"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bill_payment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/btn_separator"
            android:layout_marginEnd="@dimen/btn_separator"
            android:layout_marginLeft="@dimen/btn_separator"
            android:layout_marginRight="@dimen/btn_separator"
            android:layout_marginStart="@dimen/btn_separator"
            android:background="@drawable/accent_button_selector"
            android:text="@string/bill_payment"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/mini_statement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/btn_separator"
            android:layout_marginEnd="@dimen/btn_separator"
            android:layout_marginLeft="@dimen/btn_separator"
            android:layout_marginRight="@dimen/btn_separator"
            android:layout_marginStart="@dimen/btn_separator"
            android:background="@drawable/accent_button_selector"
            android:text="@string/read_mini_statement"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>
