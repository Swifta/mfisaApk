<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MMOperatorsFragment"
    android:background="@color/colorDividerLight">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ready_cash"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/two_hundred_dp"
                    android:layout_marginEnd="@dimen/five_dp"
                    android:layout_marginRight="@dimen/five_dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ready" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/ready_cash"
                        android:textColor="@color/colorAccentLight" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fets"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/two_hundred_dp"
                    android:layout_marginEnd="@dimen/five_dp"
                    android:layout_marginRight="@dimen/five_dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fets" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/fets"
                        android:textColor="@color/purple" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/teasy_mobile"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/two_hundred_dp"
                    android:layout_marginEnd="@dimen/five_dp"
                    android:layout_marginRight="@dimen/five_dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/teasy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/teasy_mobile"
                        android:textColor="@color/btn_green" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/paga"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/two_hundred_dp"
                    android:layout_marginEnd="@dimen/five_dp"
                    android:layout_marginRight="@dimen/five_dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/paga" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/paga"
                        android:textColor="@color/orange" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fortis"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/two_hundred_dp"
                    android:layout_marginEnd="@dimen/five_dp"
                    android:layout_marginRight="@dimen/five_dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fortis" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:layout_marginStart="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/fortis"
                        android:textColor="@color/red" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
