<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/theme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.swifta.mats.forms.DepositFloatActivity" >
    
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentStart="true"
            android:gravity="left"
            android:drawableStart="@drawable/ic_payment_black_24dp"
            android:drawablePadding="@dimen/activity_horizontal_padding"
            android:textSize="@dimen/title_font_size"
            android:text="@string/deposit_float" />

<LinearLayout
    android:layout_margin="@dimen/activity_horizontal_padding"
    android:id="@+id/form"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical" >
   
    
    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:textSize="@dimen/input_font_size"
        android:inputType="numberSigned"
        android:layout_marginTop="@dimen/activity_vertical_padding"
        android:background="@color/white"
        android:hint="@string/amount_hint"
        android:ems="10" />
    
    <EditText
        android:id="@+id/dealer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:textSize="@dimen/input_font_size"
        android:inputType="text"
        android:layout_marginTop="@dimen/activity_vertical_padding"
        android:background="@color/white"
        android:hint="@string/dealer_hint"
        android:ems="10" />
    
    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:textSize="@dimen/input_font_size"
        android:inputType="text"
        android:layout_marginTop="@dimen/activity_vertical_padding"
        android:background="@color/white"
        android:hint="@string/description_hint"
        android:ems="10" />
</LinearLayout>


    <LinearLayout 
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/ok"
            android:text="@string/ok"
            android:background="@drawable/button"
            android:layout_width="@dimen/btn_width1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/>
        <Button 
            android:id="@+id/cancel"
            android:text="@string/cancel"
            android:layout_width="@dimen/btn_width1"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/btn_separator"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/otp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
    
        <TextView
            android:id="@+id/transaction_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:drawableStart="@drawable/ic_perm_identity_black_24dp"
            android:drawablePadding="@dimen/activity_horizontal_padding"
            android:textSize="@dimen/input_font_size"
            android:text="@string/empty" />
	    <EditText
	        android:id="@+id/otp"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/input_height"
	        android:textSize="@dimen/input_font_size"
	        android:inputType="numberSigned"
	        android:layout_marginTop="@dimen/activity_vertical_padding"
	        android:background="@color/white"
	        android:hint="@string/dealer_confirmation"
	        android:ems="10" />
	    
    </LinearLayout>
        
    <LinearLayout 
        android:id="@+id/tranx_success_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        
	    <ListView
	        android:id="@+id/success_list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	    </ListView>
	    
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/confirm_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        
	    <ListView
	        android:id="@+id/preview_list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	    </ListView>
	    
    </LinearLayout>
    
<LinearLayout
    android:layout_margin="@dimen/activity_horizontal_padding"
    android:id="@+id/loading"
    android:visibility="gone"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical" >
    
<ProgressBar
   android:id="@+id/wait"
   style="?android:attr/progressBarStyleLarge"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_gravity="center"
   android:gravity="center"/>

    <TextView
        android:id="@+id/wait_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/input_font_size"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/green"
        android:hint="@string/please_wait"
        android:ems="10" />

</LinearLayout>

    <LinearLayout 
        android:id="@+id/confirm_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/confirm"
            android:text="@string/confirm"
            android:background="@drawable/button"
            android:layout_width="@dimen/btn_width1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/>
        <Button 
            android:id="@+id/confirm_cancel"
            android:text="@string/cancel"
            android:layout_width="@dimen/btn_width1"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/btn_separator"/>
    </LinearLayout>
    
   <LinearLayout 
        android:id="@+id/done_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/okay_done"
            android:text="@string/ok"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="@dimen/btn_separator"/>

    </LinearLayout>
    
   <LinearLayout 
        android:id="@+id/back_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_padding"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/back_done"
            android:text="@string/back"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:layout_margin="@dimen/btn_separator"/>

    </LinearLayout>
    
</RelativeLayout>
