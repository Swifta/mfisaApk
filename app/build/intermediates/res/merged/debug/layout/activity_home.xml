<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/theme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.swifta.mats.HomeActivity" >

<LinearLayout 
    android:id="@+id/options"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content">
    
        <Button 
            android:id="@+id/withdrawal"
            android:text="@string/withdrawal"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/>
        <Button 
            android:id="@+id/float_transfer"
            android:text="@string/float_transfer"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/>
        <Button 
            android:id="@+id/verify_withdrawal"
            android:text="@string/verify_withdrawal"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/>
        <Button 
            android:id="@+id/deposit"
            android:text="@string/deposit"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/>     
        <Button 
            android:id="@+id/marchant_payment"
            android:text="@string/marchant_payment"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/>
        <Button 
            android:id="@+id/bill_payment"
            android:text="@string/bill_payment"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/> 
        <Button 
            android:id="@+id/sell_airtime"
            android:text="@string/sell_airtime"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/>
        <Button 
            android:id="@+id/my_account"
            android:text="@string/my_account"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/>
        <Button 
            android:id="@+id/live_chat"
            android:text="@string/live_chat"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="@color/green"
            android:layout_marginRight="@dimen/btn_separator"/>
</LinearLayout>

</ScrollView>
