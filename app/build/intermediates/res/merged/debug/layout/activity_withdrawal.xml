<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/theme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.swifta.mats.WithdrawalActivity" >
    
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentStart="true"
            android:gravity="left"
            android:drawableStart="@drawable/ic_payment_black_24dp"
            android:drawablePadding="@dimen/activity_horizontal_padding"
            android:textSize="@dimen/title_font_size"
            android:text="@string/withdraw_from_title" />
        
<ScrollView
    android:background="@color/theme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@id/title"
    android:layout_marginTop="@dimen/activity_vertical_margin">

<LinearLayout 
    android:id="@+id/options"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content">
    
        <Button 
            android:id="@+id/dealer_account"
            android:text="@string/dealer_account"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/>
        <Button 
            android:id="@+id/mats_inflow_account"
            android:text="@string/mats_inflow_account"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/>
        <Button 
            android:id="@+id/token"
            android:text="@string/token"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/btn_separator"/>

</LinearLayout>

</ScrollView>

</RelativeLayout>
