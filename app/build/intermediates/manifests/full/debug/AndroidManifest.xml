<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swifta.mats"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.swifta.mats.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.swifta.mats.service.BackgroundServices"
            android:icon="@drawable/ic_launcher"
            android:label="@string/service_name" >
        </service>

        <activity
            android:name="com.swifta.mats.HomeActivity"
            android:label="@string/title_activity_home"
            android:parentActivityName="com.swifta.mats.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swifta.mats.MainActivity" />
        </activity>
        <activity
            android:name="com.swifta.mats.WithdrawalActivity"
            android:label="@string/title_activity_withdrawal"
            android:parentActivityName="com.swifta.mats.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swifta.mats.HomeActivity" />
        </activity>
        <activity
            android:name="com.swifta.mats.MMOperatorsActivity"
            android:label="@string/title_activity_mmoperators"
            android:parentActivityName="com.swifta.mats.WithdrawalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swifta.mats.WithdrawalActivity" />
        </activity>
        <activity
            android:name="com.swifta.mats.forms.WithdrawMMActivity"
            android:label="@string/title_activity_withdraw_mm"
            android:parentActivityName="com.swifta.mats.MMOperatorsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swifta.mats.MMOperatorsActivity" />
        </activity>
        <activity
            android:name="com.swifta.mats.FloatTransferActivity"
            android:label="@string/title_activity_float_transfer"
            android:parentActivityName="com.swifta.mats.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swifta.mats.HomeActivity" />
        </activity>
        <activity
            android:name="com.swifta.mats.forms.DepositFloatActivity"
            android:label="@string/title_activity_deposit_float"
            android:parentActivityName="com.swifta.mats.FloatTransferActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swifta.mats.FloatTransferActivity" />
        </activity>
        <activity
            android:name="com.swifta.mats.forms.CompleteDepositFloatActivity"
            android:label="@string/title_activity_complete_deposit_float"
            android:parentActivityName="com.swifta.mats.FloatTransferActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swifta.mats.FloatTransferActivity" />
        </activity>
    </application>

</manifest>